          %a{href: "//github.com/rbsthlm", target: "_blank"} Github
        %li
          %a{href: "//twitter.com/rbsthlm", target: "_blank"} Twitter
        %li
          %a{href: "//facebook.com/rbsthlm", target: "_blank"} FB
        %li
          %a{href: "//instagram.com/rbsthlm", target: "_blank"} Instagram
